%h1= t('helpers.headers.listing', model: <%= class_name %>.model_name.human(count:2))
%br
%table.table.table-striped
  %tr
  <%- attributes.each do |attribute| -%>
    %th= t('activerecord.attributes.<%= singular_table_name %>.<%= attribute.name %>')
  <%- end -%>
    %th
  - @<%= plural_table_name %>.each do |<%= singular_table_name %>|
    %tr
    <%- attributes.each do |attribute| -%>
      %td= t('activerecord.attributes.<%= singular_table_name %>.<%= attribute.name %>')
    <%- end -%>
      %td
        .btn-group
          = link_to t("helpers.actions.show"), <%= singular_table_name %>_path(<%= singular_table_name %>), class: "btn btn-default"
          = link_to t("helpers.actions.edit"), edit_<%= singular_table_name %>_path(<%= singular_table_name %>), class: "btn btn-default"
          = link_to t("helpers.actions.destroy"), <%= singular_table_name %>_path(<%= singular_table_name %>), method: :delete, data: { confirm: t('helpers.messages.confirm') }, class: "btn btn-danger"

%br
= link_to t('helpers.actions.new', model: <%= class_name %>.model_name.human), new_<%= singular_table_name %>_path, class: "btn btn-primary"
